# ============================================================================
# ENVIRONMENT VARIABLES EXAMPLE FILE
# ============================================================================
# This file demonstrates various environment variable configurations
# Copy this file to .env and update with your actual values
# NEVER commit .env files with real credentials to version control!

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application environment (development, staging, production)
NODE_ENV=development
APP_ENV=development

# Application name and version
APP_NAME="My Application"
APP_VERSION=1.0.0

# Application URL and port
APP_URL=http://localhost:3000
PORT=3000
HOST=localhost

# API Configuration
API_URL=http://localhost:3000/api
API_VERSION=v1
API_TIMEOUT=30000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Primary Database (PostgreSQL example)
DB_CONNECTION=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=my_database
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL=false

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10

# MongoDB (if using NoSQL)
MONGODB_URI=mongodb://localhost:27017/my_database
MONGODB_USERNAME=admin
MONGODB_PASSWORD=your_mongo_password_here

# Redis (for caching/sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_TTL=3600

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRATION=7d

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_TIMEOUT=3600000
SESSION_COOKIE_NAME=sessionId

# Encryption
ENCRYPTION_KEY=your_encryption_key_32_characters_long
ENCRYPTION_ALGORITHM=aes-256-cbc

# Password hashing
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8

# CORS Configuration
CORS_ORIGIN=http://localhost:8080,http://localhost:3000
CORS_CREDENTIALS=true

# ============================================================================
# THIRD-PARTY API KEYS
# ============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Google Services
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Stripe Payment
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# SendGrid (Email Service)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@example.com
SENDGRID_FROM_NAME="My Application"

# Mailgun
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.example.com

# Twilio (SMS/Voice)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Firebase
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Cloudinary (Image/Video hosting)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Sentry (Error tracking)
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx
SENTRY_ENVIRONMENT=development

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# SMTP Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="My Application"

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Debug Mode
DEBUG=true
DEBUG_SQL=false

# Performance Monitoring
APM_ENABLED=false
APM_SERVER_URL=http://localhost:8200

# ============================================================================
# FILE STORAGE
# ============================================================================

# Local Storage
STORAGE_DRIVER=local
STORAGE_PATH=./storage/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Cloud Storage (S3, Azure, GCP)
CLOUD_STORAGE_DRIVER=s3
CLOUD_STORAGE_BUCKET=your-bucket-name
CLOUD_STORAGE_REGION=us-east-1

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache Driver (file, redis, memcached)
CACHE_DRIVER=redis
CACHE_PREFIX=myapp_
CACHE_TTL=3600

# Memcached
MEMCACHED_HOST=localhost
MEMCACHED_PORT=11211

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================

# Queue Driver (sync, redis, sqs, rabbitmq)
QUEUE_DRIVER=redis
QUEUE_CONNECTION=default

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# AWS SQS
SQS_KEY=your_sqs_key
SQS_SECRET=your_sqs_secret
SQS_REGION=us-east-1
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/queue-name

# ============================================================================
# RATE LIMITING
# ============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================

WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3001
WEBSOCKET_PATH=/socket.io

# Socket.io
SOCKET_IO_CORS_ORIGIN=http://localhost:8080

# ============================================================================
# FEATURE FLAGS
# ============================================================================

FEATURE_REGISTRATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_SOCIAL_LOGIN=true
FEATURE_API_DOCS=true
FEATURE_ADMIN_PANEL=true

# ============================================================================
# SCHEDULED JOBS / CRON
# ============================================================================

CRON_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
CLEANUP_SCHEDULE="0 3 * * *"

# ============================================================================
# ANALYTICS & TRACKING
# ============================================================================

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X
GA_ENABLED=true

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# Segment
SEGMENT_WRITE_KEY=your_segment_write_key

# ============================================================================
# SEARCH CONFIGURATION
# ============================================================================

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=my_index

# Algolia
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_api_key
ALGOLIA_SEARCH_KEY=your_algolia_search_key

# ============================================================================
# CDN CONFIGURATION
# ============================================================================

CDN_ENABLED=false
CDN_URL=https://cdn.example.com
CDN_PROVIDER=cloudfront

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================

# Test Database
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_DATABASE=test_database
TEST_DB_USERNAME=test_user
TEST_DB_PASSWORD=test_password

# Mock Services
MOCK_EXTERNAL_APIS=true
MOCK_PAYMENT_GATEWAY=true

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================

# Docker Compose Settings
COMPOSE_PROJECT_NAME=myapp
DOCKER_BUILDKIT=1

# ============================================================================
# PROXY & NETWORK
# ============================================================================

HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Trust Proxy (for reverse proxy setups)
TRUST_PROXY=false

# ============================================================================
# LOCALIZATION
# ============================================================================

DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de
TIMEZONE=UTC

# ============================================================================
# CUSTOM APPLICATION VARIABLES
# ============================================================================

# Your custom variables here
CUSTOM_VARIABLE_1=value1
CUSTOM_VARIABLE_2=value2
CUSTOM_FEATURE_ENABLED=true

# ============================================================================
# NOTES
# ============================================================================
# 1. Always use strong, unique values for secrets in production
# 2. Never commit .env files with real credentials to version control
# 3. Use different values for development, staging, and production
# 4. Rotate secrets regularly
# 5. Use environment-specific .env files (.env.development, .env.production)
# 6. Consider using secret management services (AWS Secrets Manager, HashiCorp Vault)
# 7. Document all environment variables in this file
# 8. Use validation to ensure required variables are set